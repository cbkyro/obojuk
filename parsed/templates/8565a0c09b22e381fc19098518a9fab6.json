{"components/cart/gift-certificates":"{{inject 'giftCertificateInputEmpty' (lang 'cart.gift_certificates.error')}}\n\n{{#if settings.gift_certificates_enabled}}\n  <div class=\"cart-totals-row\" data-gift-certificates>\n    <form class=\"form form-gift-certificate\" method=\"post\" action=\"{{urls.cart}}\" data-gift-certificate-form>\n      <div class=\"form-field\">\n        <label class=\"form-label visually-hidden\" for=\"couponcode\">{{lang 'cart.gift_certificates.enter_code'}}</label>\n        <input class=\"form-input\" id=\"couponcode\" type=\"text\" name=\"certcode\" value=\"\" placeholder=\"{{lang 'cart.gift_certificates.enter_code'}}\" data-gift-certificate-input>\n        <input class=\"button button-secondary\" type=\"submit\" value=\"{{lang 'cart.gift_certificates.submit'}}\">\n        <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n      </div>\n    </form>\n  </div>\n{{/if}}\n"}