{"components/blog/blog-item":"<article class=\"blog-item\">\n\n  <a class=\"blog-item-link\" href=\"{{post.url}}\">\n\n    <!-- Post thumbnail -->\n    <figure class=\"blog-item-featured-image\" style=\"background-image: url('{{getImage post.thumbnail 'gallery' (cdn settings.default_image)}}');\">\n      <img class=\"show-for-sr\" src=\"{{getImage post.thumbnail 'gallery' (cdn settings.default_image)}}\" alt=\"{{post.thumbnail.alt}}\">\n    </figure>\n\n  </a>\n\n    <!-- Post header -->\n  <header class=\"blog-item-header\">\n    <time class=\"blog-item-timestamp\">{{post.date_published}}</time>\n    <h1 class=\"blog-item-title\"><a href=\"{{post.url}}\">{{post.title}}</a></h1>\n  </header>\n\n  <!-- Post content -->\n  <section class=\"blog-item-content rte\">\n    {{{summary}}}{{#if post.show_read_more}}&hellip;{{/if}}\n  </section>\n\n  {{#if post.show_read_more}}\n    <footer class=\"blog-item-footer\">\n      <a class=\"read-more\" href=\"{{post.url}}\"><span>{{lang 'blog.read_more'}}</span></a>\n    </footer>\n  {{/if}}\n\n</article>\n"}